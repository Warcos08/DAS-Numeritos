<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/ajustes_text_idioma"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ajustes_btnEN"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ajustes_btnES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="EspaÃ±ol"
        app:layout_constraintEnd_toStartOf="@+id/text_idioma"
        app:layout_constraintTop_toBottomOf="@+id/text_idioma" />

    <Button
        android:id="@+id/ajustes_btnEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="English"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_idioma" />

    <Button
        android:id="@+id/ajustes_btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/ajustes_btn_salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ajustes_btnEN"
        app:layout_constraintStart_toStartOf="@+id/ajustes_btnES" />

    <fragment
        android:id="@+id/fragment_preferencias"
        android:name="com.example.das_proyecto1.Fragment_preferencias"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </fragment>

</androidx.constraintlayout.widget.ConstraintLayout>